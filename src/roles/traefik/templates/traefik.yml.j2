---
## Traefik configuration
## Generated by Ansible, do not edit manually

# Global settings
global:
  checkNewVersion: false
  sendAnonymousUsage: false

# Log settings
log:
  level: {{ traefik_log_level | default('INFO') | quote }}

{% if traefik_access_logs %}
# Access logs configuration
accessLog:
  filePath: /logs/access.log
  format: json
  bufferingSize: 100
{% endif %}

# API and dashboard
api:
  dashboard: {{ traefik_dashboard_enabled | bool | lower }}
  insecure: false

# Entry points
entryPoints:
  web:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
          permanent: true
  websecure:
    address: ":443"
    http:
      tls:
        certResolver: {{ traefik_default_cert_resolver }}

# Configure providers
providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    exposedByDefault: false
    network: {{ traefik_network_name }}
  file:
    directory: "/etc/traefik/dynamic"
    watch: true

# Certificate resolvers
certificatesResolvers:
  letsencrypt:
    acme:
      email: {{ traefik_acme_email }}
      storage: /acme/acme.json
      {% if traefik_acme_staging %}
      caServer: "https://acme-staging-v02.api.letsencrypt.org/directory"
      {% endif %}
      {% if traefik_acme_challenge_type == "tls-alpn-01" %}
      tlsChallenge: {}
      {% elif traefik_acme_challenge_type == "http-01" %}
      httpChallenge:
        entryPoint: web
      {% endif %}